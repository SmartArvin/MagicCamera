<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <!--拍照-->
    <Button
        android:id="@+id/btn_camera"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/sel_btn_camera" />


    <!--列表-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="@string/str_nav_frame"
            android:textSize="24sp"
            android:textColor="@drawable/sel_btn_nav_textcolor"
            android:background="@drawable/sel_btn_nav" />

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/str_nav_filter"
            android:textSize="24sp"
            android:textColor="@drawable/sel_btn_nav_textcolor"
            android:background="@drawable/sel_btn_nav" />

        <Button
            android:id="@+id/btn_sticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/str_nav_sticker"
            android:textSize="24sp"
            android:textColor="@drawable/sel_btn_nav_textcolor"
            android:background="@drawable/sel_btn_nav" />

        <Button
            android:id="@+id/btn_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/str_nav_label"
            android:textSize="24sp"
            android:textColor="@drawable/sel_btn_nav_textcolor"
            android:background="@drawable/sel_btn_nav" />

    </LinearLayout>


</LinearLayout>